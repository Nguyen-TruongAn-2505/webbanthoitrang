server.port=8080
server.servlet.context-path=/CizayaAdmin

spring.datasource.url=jdbc:mysql://localhost:3306/cizayadb
spring.datasource.username=root
spring.datasource.password=1234
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver


#//request hibernate frameword create table in database from entity
spring.jpa.hibernate.ddl-auto=update

# show command(cau lenh) in terminal
spring.jpa.show-sql=true

# format command so, read easy
spring.jpa.properties.hibernate.format_sql=true

# chi dinh phuong thuc co so du lieu la mysql
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.MySQL8Dialect
